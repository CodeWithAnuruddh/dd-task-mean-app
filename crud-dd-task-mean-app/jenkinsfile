pipeline {
    agent any

    environment {
        BACKEND_IMAGE  = "apsingh566/ddtask-backend"
        FRONTEND_IMAGE = "apsingh566/ddtask-frontend"
    }

    stages {

        stage('Checkout Code') {
            steps {
                git branch: 'main',
                    url: 'https://github.com/CodeWithAnuruddh/dd-task-mean-app.git'
            }
        }

        stage('Build Backend Image') {
            steps {
                sh "docker build -t $BACKEND_IMAGE:latest crud-dd-task-mean-app/backend"
            }
        }

        stage('Build Frontend Image') {
            steps {
                sh "docker build -t $FRONTEND_IMAGE:latest crud-dd-task-mean-app/frontend"
            }
        }

        stage('Push Images to DockerHub') {
            steps {
                script {
                    withDockerRegistry(credentialsId: 'docker-cred', toolName: 'docker') {
                        sh "docker push $BACKEND_IMAGE:latest"
                        sh "docker push $FRONTEND_IMAGE:latest"
                    }
                }
            }
        }

        stage('Deploy with Docker Compose') {
            steps {
                sh """
                cd crud-dd-task-mean-app
                docker-compose down --remove-orphans || true
                docker-compose pull
                docker-compose up -d --force-recreate
        """
            }
        }

        stage('Cleanup') {
            steps {
                sh "docker image prune -f"
            }
        }
    }
}
